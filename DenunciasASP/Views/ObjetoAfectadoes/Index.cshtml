@model IEnumerable<DenunciasASP.Models.ObjetoAfectado>

@{
    ViewBag.Title = "Objetos afectado en la agresión";
}

<h2>Objetos afectados en la agresión</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.denuncia.Sintesis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreAfectado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CantidadAfectado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.denuncia.Sintesis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreAfectado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CantidadAfectado)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
